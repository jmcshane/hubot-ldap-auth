{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha All",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--recursive",
                "--colors",
                "--compilers",
                "coffee:coffee-script/register",
                "--require",
                "coffee-coverage/register-istanbul",
                "test/*.coffee"
            ]
        }
    ]
}